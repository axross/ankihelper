{
  "private": true,
  "name": "ankihelper",
  "productName": "Ankihelper",
  "description": "A helper tool to add new notes into Anki",
  "author": "Kohei Asai <me@axross.io> (https://github.com/axross)",
  "version": "0.0.2-alpha",
  "main": "./src/index.ts",
  "scripts": {
    "lint": "prettier --list-different ./src/**/*.ts ./src/**/*.tsx",
    "format": "prettier --write ./src/**/*.ts ./src/**/*.tsx",
    "check": "tsc --noEmit --pretty",
    "test": "jest",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.0.1",
    "@blueprintjs/select": "^3.0.0",
    "@google-cloud/text-to-speech": "^0.2.0",
    "@types/node-fetch": "^2.1.1",
    "compromise": "^11.11.0",
    "electron-compile": "^6.4.3",
    "electron-store": "^2.0.0",
    "mime-types": "^2.1.18",
    "node-fetch": "^2.1.2",
    "normalize.css": "^8.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^4.3.3",
    "react-powerplug": "^1.0.0-rc.1",
    "react-testing-library": "^4.1.3",
    "styled-components": "^3.3.3",
    "tslib": "^1.9.3",
    "unstated": "^2.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.0",
    "@types/jest": "^23.3.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^10.5.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/uuid": "^3.4.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "dotenv": "^5.0.1",
    "electron": "^2.0.5",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "2.0.4",
    "electron-squirrel-startup": "^1.0.0",
    "jest": "^23.4.1",
    "jest-styled-components": "^5.0.1",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^23.0.1",
    "typescript": "^3.0.0-rc"
  },
  "config": {
    "forge": {
      "make_targets": {
        "darwin": [
          "zip"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "name": "<%= productName %>",
        "appCopyright": "Copyright (c) 2018 <%= author %>",
        "icon": "./icon.icns",
        "appBundleId": "io.axross.ankihelper"
      },
      "electronWinstallerConfig": {
        "name": "myp"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "myp"
      },
      "publish_targets": {
        "darwin": [
          "github"
        ]
      },
      "github_repository": {
        "owner": "axross",
        "name": "ankihelper",
        "draft": true
      }
    }
  }
}
